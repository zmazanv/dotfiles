# # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #
###############################################################################
# ~/.zshrc
###############################################################################
#------------------------------------------------------------------------------
# Si no se está ejecutando interactivamente, no se hará nada.
#------------------------------------------------------------------------------
# If not running interactively, nothing will be done.
#------------------------------------------------------------------------------
[[ $- != *i* ]] && return
#------------------------------------------------------------------------------
###############################################################################
# # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #

###############################################################################
# OPCIONES
###############################################################################
# OPTIONS
###############################################################################
#------------------------------------------------------------------------------
# Ajustes.
#------------------------------------------------------------------------------
# Settings.
#------------------------------------------------------------------------------
source ~/.zsh.d/rc.d/options/settings.zsh
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Rellenado.
#------------------------------------------------------------------------------
# Completion.
#------------------------------------------------------------------------------
source ~/.zsh.d/rc.d/options/completion.zsh
#------------------------------------------------------------------------------
###############################################################################

###############################################################################
# FUNCIONES
###############################################################################
# FUNCTIONS
###############################################################################
source ~/.zsh.d/rc.d/functions/functions.zsh
###############################################################################

###############################################################################
# EXTENSIONES
###############################################################################
# PLUGINS
###############################################################################
#------------------------------------------------------------------------------
# Resaltado de sintaxis como en Fish.
#------------------------------------------------------------------------------
# Fish-like syntax highlighting.
#------------------------------------------------------------------------------
source /usr/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Búsqueda de subcadenas en historial como en Fish.
#------------------------------------------------------------------------------
# Fish-like history substring search.
#------------------------------------------------------------------------------
source /usr/share/zsh/plugins/zsh-history-substring-search/zsh-history-substring-search.zsh
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Autosugerencias como en Fish.
#------------------------------------------------------------------------------
# Fish-like autosuggestions.
#------------------------------------------------------------------------------
source /usr/share/zsh/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh
#------------------------------------------------------------------------------
###############################################################################

###############################################################################
# MAPAS DE TECLA
###############################################################################
# KEYBINDS
###############################################################################
source ~/.zsh.d/rc.d/keybinds/keybinds.zsh
###############################################################################

###############################################################################
# ALIAS
###############################################################################
# ALIASES
###############################################################################
#------------------------------------------------------------------------------
# Para Aplicaciones.
#------------------------------------------------------------------------------
# For Applications.
#------------------------------------------------------------------------------
source ~/.zsh.d/rc.d/alias/applications.zsh
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Para Repositorios de Git.
#------------------------------------------------------------------------------
# For Git Repositories.
#------------------------------------------------------------------------------
source ~/.zsh.d/rc.d/alias/git.zsh
#------------------------------------------------------------------------------
###############################################################################

###############################################################################
# INICIO
###############################################################################
# STARTUP
###############################################################################
#------------------------------------------------------------------------------
# Aplicaciones.
#------------------------------------------------------------------------------
# Applications.
#------------------------------------------------------------------------------
source ~/.zsh.d/rc.d/startup/applications.zsh
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Prompt.
#------------------------------------------------------------------------------
source ~/.zsh.d/rc.d/startup/prompt.zsh
#------------------------------------------------------------------------------
###############################################################################
