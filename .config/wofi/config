###############################################################################
# APPEARANCE
# ▄▀█ █▀█ █▀█ █▀▀ ▄▀█ █▀█ ▄▀█ █▄░█ █▀▀ █▀▀
# █▀█ █▀▀ █▀▀ ██▄ █▀█ █▀▄ █▀█ █░▀█ █▄▄ ██▄
###############################################################################
#----------------------------------------------------------------------
# Enable shrinking wofi dynamically to fit the number of visible lines.
#----------------------------------------------------------------------
dynamic_lines = true
#----------------------------------------------------------------------
#
#---------------------------------------------------------------------
# Enable using the dark variant of the current GTK theme if available.
#---------------------------------------------------------------------
gtk_dark = true
#---------------------------------------------------------------------
#
#-------------------------------
# Disable hiding the search bar.
#-------------------------------
hide_scroll = false
#-------------------------------
#
#---------------------------
# Enable word line wrapping.
#---------------------------
line_wrap = word
#---------------------------
#
#-----------------------------
# Set orientation to vertical.
#-----------------------------
orientation = vertical
#-----------------------------
#
#---------------------------------------------
# Set the prompt to display in the search box.
#---------------------------------------------
prompt = Escribe para buscar...
#---------------------------------------------
###############################################################################

###############################################################################
# BEHAVIOR
# █▄▄ █▀▀ █░█ ▄▀█ █░█ █ █▀█ █▀█
# █▄█ ██▄ █▀█ █▀█ ▀▄▀ █ █▄█ █▀▄
###############################################################################
#-----------------------------------------------
# Disable processing and rendering pango markup.
#-----------------------------------------------
allow_markup = false
#-----------------------------------------------
#
#--------------------------------------------------
# Enable multiple actions for multi-action entries.
#--------------------------------------------------
no_actions = false
#--------------------------------------------------
#
#-----------------------------
# Run using a wlr-layer-shell.
#-----------------------------
normal_window = false
#-----------------------------
#
#------------------------------------------
# Make actions be executed on double-click.
#------------------------------------------
single_click = false
#------------------------------------------
###############################################################################

###############################################################################
# IMAGES
# █ █▀▄▀█ ▄▀█ █▀▀ █▀▀ █▀
# █ █░▀░█ █▀█ █▄█ ██▄ ▄█
###############################################################################
#--------------------------------------------------------
# Enable processing and rendering image escape sequences.
#--------------------------------------------------------
allow_images = true
#--------------------------------------------------------
#
#-----------------------------
# Set image size to 50 pixels.
#-----------------------------
image_size = 50
#-----------------------------
###############################################################################

###############################################################################
# SEARCH
# █▀ █▀▀ ▄▀█ █▀█ █▀▀ █░█
# ▄█ ██▄ █▀█ █▀▄ █▄▄ █▀█
###############################################################################
#-------------------------------------------------------------------
# Disable executing the search directly instead of the first result.
#-------------------------------------------------------------------
exec_search = false
#-------------------------------------------------------------------
#
#--------------------------------
# Enable case insensitive search.
#--------------------------------
insensitive = true
#--------------------------------
#
#-------------------------------------
# Set matching mode to multi-contains.
#-------------------------------------
matching = multi-contains
#-------------------------------------
#
#---------------------------------------------------------------------------
# Disable parsing out image escape sequences and pango markup for searching.
#---------------------------------------------------------------------------
parse_search = false
#---------------------------------------------------------------------------
#
#---------------------------
# Set sort-order to default.
#---------------------------
sort_order = default
#---------------------------
###############################################################################

###############################################################################
# KEYBINDS
# █▄▀ █▀▀ █▄█ █▄▄ █ █▄░█ █▀▄ █▀
# █░█ ██▄ ░█░ █▄█ █ █░▀█ █▄▀ ▄█
###############################################################################
#----------------
# Exit wofi.
#----------------
key_exit = Escape
#----------------
#
#--------------------------------------
# Expand/contract multi-action entries.
#--------------------------------------
key_expand = Tab
#--------------------------------------
#
#---------------------
# Move down.
#---------------------
key_down = Control_L-n
#---------------------
#
#-------------------
# Move up.
#-------------------
key_up = Control_L-p
#-------------------
#
#--------------------
# Submit an action.
#--------------------
key_submit = Return
#--------------------
###############################################################################

###############################################################################
# RUN
# █▀█ █░█ █▄░█
# █▀▄ █▄█ █░▀█
###############################################################################
#-----------------------------------------------------------------------------
# Specifies the executable to pipe copy data into. $PATH will be scanned. This
# is not passed to a shell and must be an executable. Default is wl-copy.
#-----------------------------------------------------------------------------
copy_path = wl-copy
#-----------------------------------------------------------------------------
#
#--------------------------
# Set default mode to drun.
#--------------------------
mode = drun
#--------------------------
#
#-----------------------------------------------------------------------------
# Specify the term to use when running a program in a terminal. Overrides the
# default run order, which is kitty, termite, alacritty, foot, gnome-terminal,
# and weston-terminal, in that order.
#-----------------------------------------------------------------------------
term = kitty
#-----------------------------------------------------------------------------
###############################################################################
