###############################################################################
# ~/.config/fish/conf.d/binds/binds.fish
#
# MAPAS
###############################################################################
# ~/.config/fish/conf.d/binds/binds.fish
#
# BINDS
###############################################################################
#------------------------------------------------------------------------------
# Establece los mapas de tecla del modo vi.
#------------------------------------------------------------------------------
# Set vi-mode keybindings.
#------------------------------------------------------------------------------
fish_vi_key_bindings
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Establece la figura predeterminada del cursor en un bloque.
#------------------------------------------------------------------------------
# Set default cursor shape to a block.
#------------------------------------------------------------------------------
set fish_cursor_default block
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Cambia la figura del cursor a un línea cuando en el modo de inserción.
#------------------------------------------------------------------------------
# Set cursor shape to a line when in insert-mode.
#------------------------------------------------------------------------------
set fish_cursor_insert line
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Cambia la figura del cursor a un guion bajo cuando en el modo de reemplazo.
#------------------------------------------------------------------------------
# Set cursor shape to an underscore when in replace-mode.
#------------------------------------------------------------------------------
set fish_cursor_replace_one underscore
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Cambia la figura del cursor a un bloque cuando en el modo visual.
#------------------------------------------------------------------------------
# Set cursor shape to a block when in visual-mode.
#------------------------------------------------------------------------------
set fish_cursor_visual block
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Asigna la función `up-or-search` para el modo de inserción.
#------------------------------------------------------------------------------
# Bind `up-or-search` function in insert-mode.
#------------------------------------------------------------------------------
bind -M insert \cp up-or-search
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Asigna la función `down-or-search` para el modo de inserción.
#------------------------------------------------------------------------------
# Bind `down-or-search` function in insert-mode.
#------------------------------------------------------------------------------
bind -M insert \cn down-or-search
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Asigna la función `beginning-of-line` para el modo normal.
#------------------------------------------------------------------------------
# Bind `beginning-of-line` function in normal-mode.
#------------------------------------------------------------------------------
bind -M default _ beginning-of-line
#------------------------------------------------------------------------------
###############################################################################
