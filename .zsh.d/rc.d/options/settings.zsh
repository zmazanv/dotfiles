###############################################################################
# ~/.zsh.d/rc.d/options/settings.zsh
#
# AJUSTES
###############################################################################
# ~/.zsh.d/rc.d/options/settings.zsh
#
# SETTINGS
###############################################################################
#------------------------------------------------------------------------------
# Establece dónde se guarda el historial de comandos.
#------------------------------------------------------------------------------
# Set where the command history is saved.
#------------------------------------------------------------------------------
HISTFILE=~/.zsh_history
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Establece el número de comandos que se conservarán en el historial mientras
# el intérprete se esté ejecutando.
#------------------------------------------------------------------------------
# Set the number of commands that will be kept in the history while the shell
# is running.
#------------------------------------------------------------------------------
HISTSIZE=10000
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Establece el número de comandos que se conservarán en el historial cuando
# el intéprete se cierre.
#------------------------------------------------------------------------------
# Set the number of commands that will be kept in the history when the shell
# exits.
#------------------------------------------------------------------------------
SAVEHIST=10000
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Habilita sonar un pitido cuando ocurra un error.
#------------------------------------------------------------------------------
# Enable beep sound when an error occurs.
#------------------------------------------------------------------------------
setopt beep
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Habilita sintaxis de globbing extendido en los patrones.
#------------------------------------------------------------------------------
# Enable extended globbing syntax in patterns.
#------------------------------------------------------------------------------
setopt extendedglob
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Habilita que sea error no encontrar archivos en la generación de nombres de
# archivos.
#------------------------------------------------------------------------------
# Enable not matching any files in filename generation be an error.
#------------------------------------------------------------------------------
setopt nomatch
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Habilita notificar cuando termine una tarea de fondo antes de emitir otro
# comando.
#------------------------------------------------------------------------------
# Enable notification when background job completes before issuing a another
# command.
#------------------------------------------------------------------------------
setopt notify
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Deshabilita entrar en directorios sin necesitar `cd`.
#------------------------------------------------------------------------------
# Disable entering directories without needing `cd`.
#------------------------------------------------------------------------------
unsetopt autocd
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Establece los mapas de tecla del modo vi.
#------------------------------------------------------------------------------
# Set vi-mode keybindings.
#------------------------------------------------------------------------------
bindkey -v
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Marca `edit-command-line` para ser autocargado.
#------------------------------------------------------------------------------
# Mark `edit-command-line` for autoloading.
#------------------------------------------------------------------------------
autoload -Uz edit-command-line
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Crea un nuevo widget de ZLE (Zsh Line Editor) para `edit-command-line`.
#------------------------------------------------------------------------------
# Create a new ZLE (Zsh Line Editor) widget for `edit-command-line`.
#------------------------------------------------------------------------------
zle -N edit-command-line
#------------------------------------------------------------------------------
#
#------------------------------------------------------------------------------
# Establece la cantidad de tiempo a esperar para que termine una secuencia de
# teclas.
#------------------------------------------------------------------------------
# Set the amount of time to wait for a key sequence to complete.
#------------------------------------------------------------------------------
KEYTIMEOUT=1
#------------------------------------------------------------------------------
###############################################################################
