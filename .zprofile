# Source argument if it is a regular file; ignore if not.
function check_source {
	if [[ -f "$1" ]]; then
		source "$1"
	fi
}

###############################################################################
# ENVIRONMENT
# █▀▀ █▄░█ █░█ █ █▀█ █▀█ █▄░█ █▀▄▀█ █▀▀ █▄░█ ▀█▀
# ██▄ █░▀█ ▀▄▀ █ █▀▄ █▄█ █░▀█ █░▀░█ ██▄ █░▀█ ░█░
###############################################################################
check_source "$HOME"/.zsh.d/profile.d/environment/variables.zsh
###############################################################################

###############################################################################
# ZSHRC
# ▀█ █▀ █░█ █▀█ █▀▀
# █▄ ▄█ █▀█ █▀▄ █▄▄
###############################################################################
check_source "$HOME"/.zshrc
###############################################################################

# Unset function so it doesn't make it into the login session.
unset -f check_source
